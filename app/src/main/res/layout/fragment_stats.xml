<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/stats_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/active_days_text"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/longest_streak_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp" />

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/task_status_chart"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginBottom="24dp" />
        
        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/done_tasks_per_category_chart"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginBottom="24dp" />

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/avg_difficulty_chart"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginBottom="24dp" />

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/xp_per_days_chart"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginBottom="24dp" />

    </LinearLayout>

</ScrollView>
